<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frgGestionarCombo"
    tools:context=".frgGestionarProducto">
    android:id="@+id/frgGestionarProducto"

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="286dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="63dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="62dp"
                android:gravity="center"
                android:text="Producto"
                android:textSize="30sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="84dp"
                android:layout_marginEnd="1dp"
                android:text="Nombre:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtNombreProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:width="80dp"
                android:hint="Nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_below="@+id/textView11"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="1dp"
                android:text="Descripción:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtDescripcionProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:width="100dp"
                android:hint="Descripción"
                android:inputType="textPersonName" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_below="@+id/textView12"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="1dp"
                android:text="Tipo:"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@+id/txtDescripcionProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginBottom="10dp"
                android:width="100dp"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_below="@+id/textView13"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="1dp"
                android:text="Precio:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtPrecioProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:width="100dp"
                android:hint="Precio"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_below="@+id/textView14"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="1dp"
                android:text="Cantidad:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtStockProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPrecioProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:width="100dp"
                android:hint="Cantidad"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="141dp"
                android:layout_height="37dp"
                android:layout_below="@+id/textView15"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="43dp"
                android:layout_marginEnd="1dp"
                android:text="Descuento:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtDescuentoProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtStockProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:width="100dp"
                android:hint="Descuento"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/lyfoto"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/txtDescuentoProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnFoto"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bordes_redondos2"

                    android:text="Foto"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20dp" />

            </LinearLayout>


            <ImageView
                android:id="@+id/imgFotoProducto"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/lyfoto"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@android:drawable/ic_menu_report_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgFotoProducto"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="0dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnRegistrarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordes_redondos2"
                    android:color="#689F38"
                    android:text="Guardar"
                    android:textAlignment="center"
                    android:textColor="#689F38"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnEliminarProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordes_redondos2"
                    android:color="#689F38"
                    android:text="Eliminar"
                    android:textAlignment="center"
                    android:textColor="#689F38"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordes_redondos2"
                    android:color="#689F38"
                    android:text="Cancelar"
                    android:textAlignment="center"
                    android:textColor="#689F38"
                    android:textStyle="bold" />
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</FrameLayout>